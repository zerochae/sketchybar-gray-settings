{
  "name": "sketchybar-gray-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:all": "pnpm -r build:tauri",
    "install:all": "pnpm build:all && ./scripts/install.sh",
    "react": "pnpm --filter @sketchybar-gray/react",
    "settings": "pnpm --filter @sketchybar-gray/settings",
    "settings:dev": "pnpm --filter @sketchybar-gray/settings dev",
    "settings:build": "pnpm --filter @sketchybar-gray/settings build:tauri",
    "settings:install": "pnpm settings:build && ./scripts/install.sh settings",
    "volume": "pnpm --filter @sketchybar-gray/volume",
    "volume:dev": "pnpm --filter @sketchybar-gray/volume dev",
    "volume:build": "pnpm --filter @sketchybar-gray/volume build:tauri",
    "volume:install": "pnpm volume:build && ./scripts/install.sh volume",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  }
}
