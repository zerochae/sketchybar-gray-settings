{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "process:default",
    "dialog:default",
    "core:path:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": ["-c", "sketchybar --reload"]
        },
        {
          "name": "which",
          "cmd": "/usr/bin/which",
          "args": true
        },
        {
          "name": "code",
          "cmd": "/usr/local/bin/code",
          "args": true,
          "sidecar": false
        },
        {
          "name": "code",
          "cmd": "/opt/homebrew/bin/code",
          "args": true,
          "sidecar": false
        },
        {
          "name": "cursor",
          "cmd": "/usr/local/bin/cursor",
          "args": true,
          "sidecar": false
        },
        {
          "name": "cursor",
          "cmd": "/opt/homebrew/bin/cursor",
          "args": true,
          "sidecar": false
        },
        {
          "name": "zed",
          "cmd": "/usr/local/bin/zed",
          "args": true,
          "sidecar": false
        },
        {
          "name": "zed",
          "cmd": "/opt/homebrew/bin/zed",
          "args": true,
          "sidecar": false
        },
        {
          "name": "subl",
          "cmd": "/usr/local/bin/subl",
          "args": true,
          "sidecar": false
        },
        {
          "name": "subl",
          "cmd": "/opt/homebrew/bin/subl",
          "args": true,
          "sidecar": false
        },
        {
          "name": "osascript",
          "cmd": "/usr/bin/osascript",
          "args": true
        },
        {
          "name": "open",
          "cmd": "/usr/bin/open",
          "args": true
        }
      ]
    }
  ]
}
