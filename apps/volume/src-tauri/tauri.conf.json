{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "volume",
  "version": "0.1.0",
  "identifier": "com.kwon-gray.volume",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Volume",
        "width": 250,
        "height": 100,
        "decorations": false,
        "transparent": true,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "center": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "dragDropEnabled": false,
        "alwaysOnTop": true,
        "visible": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
