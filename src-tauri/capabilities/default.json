{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "process:default",
    "dialog:default",
    "core:path:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/.config/sketchybar/user.sketchybarrc"
        }
      ]
    },
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "sh",
          "cmd": "/bin/sh",
          "args": ["-c", "sketchybar --reload"]
        }
      ]
    }
  ]
}
